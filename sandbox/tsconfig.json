{
	"compilerOptions": {
		"lib": [
			"ESNext",
			"DOM"
		],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		"moduleResolution": "node",
		"verbatimModuleSyntax": true,
		"baseUrl": "./",
		"paths": {
			"@hellajs/core*": [
				"../lib/index.ts"
			]
		},
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noPropertyAccessFromIndexSignature": false
	},
	"include": [
		"./**/*.ts"
	]
}